@model Entidades.BE_Producto


@{
    ViewBag.Title = "Select";
}

@using (Html.BeginForm("Select", "Producto"))
{
    <div class="marco">
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(Model => Model.cod_Producto)</dt>
            <dd>@Html.DisplayFor(model => model.cod_Producto)</dd>
            <dt>@Html.DisplayNameFor(model => model.Des_Producto)</dt>
            <dd>@Html.DisplayFor(model => model.Des_Producto)</dd>
            <dt>@Html.DisplayNameFor(model => model.precio)</dt>
            <dd>@string.Format("{0:N2}", Html.DisplayFor(model => model.precio)) </dd>
            <dt>@Html.DisplayNameFor(model => model.stock)</dt>
            <dd>@Html.DisplayFor(model => model.stock)</dd>
        </dl>
    </div>



}



